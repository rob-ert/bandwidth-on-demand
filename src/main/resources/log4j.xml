<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- ============================== -->
  <!-- Append messages to the console -->
  <!-- ============================== -->
  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p [%t] (%c) - %m%n" />
    </layout>
  </appender>

  <logger name="org.springframework">
    <level value="WARN" />
  </logger>

  <logger name="com.googlecode.flyway">
    <level value="INFO" />
  </logger>

  <logger name="nl.surfnet">
    <level value="INFO" />
  </logger>

  <logger name="nl.surfnet.bod.service">
    <level value="INFO" />
  </logger>

  <logger name="nl.surfnet.bod.nsi">
    <level value="INFO" />
  </logger>

  <logger name="nl.surfnet.bod.mtosi">
    <level value="INFO" />
  </logger>

  <logger name="nl.surfnet.bod.web.base">
   <level value="INFO" />
  </logger>

<!--
  <logger name="nl.surfnet.bod.web.csrf">
   <level value="DEBUG" />
  </logger>

  <logger name="nl.surfnet.bod.web.push">
    <level value="DEBUG" />
  </logger>

  <logger name="org.springframework.security.web.authentication">
    <level value="DEBUG" />
  </logger>

  <logger name="nl.surfnet.bod.web.security">
    <level value="DEBUG" />
  </logger>

  <logger name="org.hibernate.type">
   <level value="TRACE" />
  </logger>

  <logger name="org.hibernate.SQL">
   <level value="DEBUG" />
  </logger>
-->

  <root>
    <level value="WARN" />
    <appender-ref ref="CONSOLE" />
  </root>
</log4j:configuration>
